<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.business.student.dao.StudentCourseDao">

    <resultMap type="com.qf.data.student.entity.StudentCourse" id="StudentCourseMap">
        <result property="sid" column="sid" jdbcType="INTEGER"/>
        <result property="cid" column="cid" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="delFlag" column="del_flag" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="sid" useGeneratedKeys="true">
        insert into course.student_course(create_time, update_time, status, del_flag)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.createTime}, #{entity.updateTime}, #{entity.status}, #{entity.delFlag})
        </foreach>
    </insert>
    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="sid" useGeneratedKeys="true">
        insert into course.student_course(create_time, update_time, status, del_flag)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.createTime}, #{entity.updateTime}, #{entity.status}, #{entity.delFlag})
        </foreach>
        on duplicate key update
         create_time = values(create_time) , update_time = values(update_time) , status = values(status) , del_flag = values(del_flag)     </insert>

</mapper>

